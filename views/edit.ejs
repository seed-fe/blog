<%- include header %>
<%- include nav %>
<div class="container">
  <%- include flash %>
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/index">主页</a></li>
      <li><a href="/u/<%= post.name %>"><%= post.name %></a></li>
      <li class="active"><%= post.title %>·编辑</li>
    </ol>
  </div>
  <div class="row" id="main_body">
    <div class="col-sm-8 blog-main">
      <div class="blog-post">
        <form method="post" role="form" action="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
          <div class="form-group">
            <label for="post-tile">标题：</label>
            <input id="post-tile" class="form-control input-lg" type="text" name="title" value="<%= post.title %>" required>
          </div>
          <div  class="form-group">
            <label for="post-tag" class="label-tags">标签：</label>
            <input id="post-tag" class="form-control input-sm tags" type="text" name="tag1" value="<%= post.tags[0] %>"><input class="form-control input-sm tags" type="text" name="tag2" value="<%= post.tags[1] %>"><input class="form-control input-sm tags" type="text" name="tag3" value="<%= post.tags[2] %>">
          </div>
          <div  class="form-group">
            <label for="post-post">正文：</label>
            <textarea id="post-post" class="form-control" name="post" rows="20" cols="80" required><%= post.post %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">保存修改</button>
        </form>
      </div>
    <!-- /.blog-main -->
    </div>
    <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
      <%- include sidebar_about %>
      <%- include sidebar_archive %>
      <%- include sidebar_tags %>
    </div><!-- /.blog-sidebar -->
  <!-- /.row -->
  </div>
<!-- /.container -->
</div>
<%- include footer %>